@model BusinessObject.EntityModels.Member;

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Welcome to eStore</h1>
    <div class="row">
    <div class="col-md-4">
        <form asp-controller="Members" asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passwords" class="control-label"></label>
                <input asp-for="Passwords" class="form-control" type="password" />
                <span asp-validation-for="Passwords" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <br />
            <p>@ViewData["Message"]</p>
        </form>
        <a asp-controller="Members" asp-action="Register">Register</a>
    </div>
</div>
</div>
